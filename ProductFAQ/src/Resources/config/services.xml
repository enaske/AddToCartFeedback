<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ProductFAQ\Core\Content\FAQ\FAQDefinition">
            <tag name="shopware.entity.definition" entity="faq_product"/>
        </service>
        <service id="ProductFAQ\Core\Content\ProductFAQ\ProductFAQDefinition">
            <tag name="shopware.entity.definition" entity="product_faq"/>
        </service>
        <service id="ProductFAQ\Storefront\Subscriber\ProductDetailSubscriber" public="true">
            <argument id="Shopware\Core\System\SystemConfig\SystemConfigService" type="service"/>
            <argument id="product_faq.repository" type="service"/>
            <argument type="service" id="request_stack" />
            <tag name="kernel.event_subscriber"/>
        </service>

    </services>
</container>