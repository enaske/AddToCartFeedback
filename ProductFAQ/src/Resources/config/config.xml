    <card>
        <title>Basic configuration</title>
        <title lang="de-DE">Grundeinstellungen</title>
        <input-field type="bool">
            <name>showFAQ</name>
            <label>Show FAQ</label>
            <label lang="de-DE">FAQ Anzeigen</label>

        </input-field>
        <input-field type="text">
